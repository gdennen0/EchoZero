{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "files.associations": {
    "*.md": "markdown",
    "requirements*.txt": "pip-requirements",
    "pyrightconfig.json": "jsonc"
  },
  "emmet.includeLanguages": {
    "markdown": "html"
  },
  "editor.quickSuggestions": {
    "comments": true,
    "strings": true,
    "other": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.pytest_cache": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.git": true
  },
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "editor.minimap.enabled": false,
  "workbench.editor.enablePreview": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    100
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "python.defaultInterpreterPath": "python3",
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "workbench.colorTheme": "Default Dark Modern",
  "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "workbench.fontAliasing": "antialiased",

  "echozero.agentAssets.enabled": true,
  "echozero.agentAssets.autoSync": true,
  "echozero.agentAssets.qualityChecks": true,
  "echozero.agentAssets.startupValidation": true,

  "echozero.aiContext.enabled": true,
  "echozero.aiContext.autoInject": true,
  "echozero.aiContext.enhancePrompts": true,
  "echozero.aiContext.cacheTimeout": 600,

  "tasks.tasks.json": ".cursor/tasks.json",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
}
